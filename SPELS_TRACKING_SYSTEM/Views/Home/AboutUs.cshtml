@inject IHttpContextAccessor httpContextAccessor

@{
    var admin = httpContextAccessor.HttpContext.Session.GetInt32("IsAdmin");
    if (admin == 1)
    {
        Layout = "_AdminLayout";
        ViewData["Title"] = "About Me!";
    }
    else
    {
        Layout = "_Layout";
        ViewData["Title"] = "About Me!";
    }
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
        padding: 4rem 0;
        margin-bottom: 3rem;
        border-radius: 0 0 2rem 2rem;
    }

    .profile-img {
        border: 4px solid white;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .profile-img:hover {
        transform: scale(1.02);
    }

    .feature-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0,0,0,0.1);
    }

    .section-title {
        position: relative;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 3px;
        background: #4f46e5;
        border-radius: 3px;
    }

    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4 text-center">
                <img src="~/img/profile.jpg" alt="Profile Picture" class="img-fluid rounded-circle profile-img" style="max-width: 250px; height: auto;">
            </div>
            <div class="col-md-8">
                <h1 class="display-4 mb-3">Arjahn V. Milar</h1>
                <p class="lead mb-4">Final-year Information Technology Student at Asian College of Technology</p>
                <p class="mb-0">Passionate about creating impactful software solutions and improving processes through technology.</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title">About Me</h2>
            <div class="row">
                <div class="col-md-6">
                    <p class="lead mb-4">
                        I'm currently working on the SPELS Tracking System as part of my on-the-job training with the Examination Services Division.
                    </p>
                    <p>
                        This project represents my commitment to improving document management and tracking processes through technology. I believe in creating user-friendly solutions that solve real-world problems.
                    </p>
                </div>
                <div class="col-md-6">
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">Education</h4>
                        <p class="mb-0">
                            <strong>Bachelor of Science in Information Technology</strong><br>
                            Asian College of Technology (ACTIEF)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="section-title">About the Project</h2>
            <p class="lead mb-5">
                The SPELS Tracking System is an Examination Services Division project developed as part of my on-the-job training (OJT) requirement. 
                This system represents the culmination of knowledge and skills gained throughout my academic journey.
            </p>

            <h3 class="mb-4">Key Features</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">Compliance Monitoring Dashboard</h4>
                        <p class="mb-0">Track timelines for submissions, evaluations, and approvals to ensure adherence to CSC regulations.</p>
                    </div>
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">Audit Trail and Logging</h4>
                        <p class="mb-0">Record all document edits, access logs, and user actions for accountability and auditing purposes.</p>
                    </div>
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">Custom Report Generation</h4>
                        <p class="mb-0">Generate downloadable reports (Excel) for compliance, audit readiness, or management summaries.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">Policy-Based Access Control</h4>
                        <p class="mb-0">Allow specific document access rules based on civil service roles (e.g., Receiver, Processor, Approver).</p>
                    </div>
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">Search Functionality</h4>
                        <p class="mb-0">Advanced filtering and keyword search capabilities for efficient document retrieval.</p>
                    </div>
                    <div class="feature-card">
                        <h4 class="gradient-text mb-3">User-Friendly Interface</h4>
                        <p class="mb-0">Intuitive design requiring minimal training for quick adoption.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
